@model CodeTheWay.Models.Donor
@{
    ViewBag.Title = "Donor";
}

<h2>Donor</h2>

@using (Html.BeginForm("Create", "FinancialDonors"))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.FirstName)
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(model => model.LastName)
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-9">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-md-3">
            <label for="DonorType">Donor Type</label>
            <select class="form-control" id="DonorType" onchange="switchPost(this.options[this.selectedIndex].text)">
                <option>Financial</option>
                <option>Facilities</option>
                <option>Volunteer</option>
            </select>
        </div>
    </div>

    <div class="form-group" id="dynamicForm">

    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
}
<div id="Financial" hidden>
    <h1>He</h1>
    <p>fin</p>
</div>
<div id="Facilities" hidden>
    <h1>She</h1>
    <p>fac</p>
</div>
<div id="Volunteer" hidden>
    <h1>They</h1>
    <p>vol</p>
</div>

<div>
    @Html.ActionLink("Back to Home", "Index")
</div>

<script type="text/javascript">
    var form = document.querySelector('form');
    // TODO: Figure out how to move the form content out of the form and then move new content in

    function switchPost(name) {
        var curForm = form.querySelector('#dynamicForm');
        console.info(name);
        //append(curForm.innerHTML);
        curForm.innerHTML = document.documentElement.querySelector(`#${name}`).innerHTML;
        form.action = `/${name}Donor/Create`
    }

    function append(str) {
        document.documentElement.insertAdjacentHTML('beforeend', str);
    }
</script>